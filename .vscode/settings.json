{
    "angular-schematics.schematicsDefaultOptions": {
        "angular-*": {
            "externalTemplate": true,
            "style": "scss"
        },
        "angular-component": {
            "ngOnInit": true,
            "skipPathSubfolder": true
        }
    },
    "cSpell.words": [
        "Continuar",
        "Freela",
        "inválido",
        "João",
        "obrigatório",
        "Salvar"
    ],
    "explorer.fileNesting.enabled": true, "explorer.fileNesting.patterns": {
      "*.component.ts": "${capture}.component.ts, ${capture}.component.html, ${capture}.component.scss, ${capture}.component.spec.ts"
    },
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    }
}
